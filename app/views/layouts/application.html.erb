<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "AdSensie - Telegram Analytics for Ad Placement" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/images/logo-icon.png" type="image/png">
    <link rel="apple-touch-icon" href="/images/logo-icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
      .turbo-progress-bar {
        background-color: #4f46e5; /* indigo-600 */
        height: 3px;
      }
    </style>
  </head>

  <body class="bg-gray-50">
    <% if user_signed_in? %>
      <!-- Navigation -->
      <nav class="bg-white/90 backdrop-blur-md shadow-sm border-b border-gray-200 fixed top-0 w-full z-50 transition-all duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-20">
            <div class="flex">
              <!-- Logo -->
              <div class="flex-shrink-0 flex items-center">
                <%= link_to root_path, class: "group flex items-center gap-3" do %>
                  <%= image_tag "AdSensie.png", alt: "AdSensie", class: "h-10 w-auto transition-transform duration-300 group-hover:scale-105" %>
                <% end %>
              </div>
              
              <!-- Navigation Links -->
              <div class="hidden sm:ml-10 sm:flex sm:space-x-8">
                <%= link_to dashboard_path, class: "inline-flex items-center px-1 pt-1 border-b-2 #{current_page?(dashboard_path) ? 'border-brand-lime text-brand-navy' : 'border-transparent text-gray-500 hover:text-brand-navy hover:border-gray-300'} text-sm font-medium transition-all duration-200 h-full" do %>
                  <span class="mr-2">üìä</span> Dashboard
                <% end %>
                
                <%= link_to channels_path, class: "inline-flex items-center px-1 pt-1 border-b-2 #{current_page?(channels_path) ? 'border-brand-lime text-brand-navy' : 'border-transparent text-gray-500 hover:text-brand-navy hover:border-gray-300'} text-sm font-medium transition-all duration-200 h-full" do %>
                  <span class="mr-2">üì∫</span> Channels
                <% end %>
                
                <%= link_to collections_path, class: "inline-flex items-center px-1 pt-1 border-b-2 #{current_page?(collections_path) ? 'border-brand-lime text-brand-navy' : 'border-transparent text-gray-500 hover:text-brand-navy hover:border-gray-300'} text-sm font-medium transition-all duration-200 h-full" do %>
                  <span class="mr-2">üìÅ</span> Collections
                <% end %>
              </div>
            </div>
            
            <!-- User Menu -->
            <div class="flex items-center gap-4">
              <div class="hidden md:flex items-center gap-2 px-3 py-1.5 bg-gray-50 rounded-full border border-gray-200">
                <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
                <span class="text-xs font-medium text-gray-600"><%= current_user.email %></span>
              </div>
              
              <%= button_to destroy_user_session_path, method: :delete, class: "text-gray-500 hover:text-red-600 transition-colors p-2 rounded-full hover:bg-red-50" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </nav>

      <!-- Flash Messages -->
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-20">
        <% if notice %>
          <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-4">
            <p class="text-green-700"><%= notice %></p>
          </div>
        <% end %>
        <% if alert %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
            <p class="text-red-700"><%= alert %></p>
          </div>
        <% end %>
      </div>

      <!-- Main Content -->
      <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <%= yield %>
      </main>
    <% else %>
      <!-- Auth Pages (Login/Signup) -->
      <main class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <%= yield %>
      </main>
    <% end %>
  </body>
</html>
