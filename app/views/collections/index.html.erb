<div class="space-y-8 animate-fade-in">
  <!-- Header -->
  <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
    <div>
      <h1 class="text-4xl font-bold text-gray-900 tracking-tight">Collections</h1>
      <p class="mt-2 text-lg text-gray-600">Organize and track your favorite channels for ad campaigns.</p>
    </div>
    <%= link_to new_collection_path, class: "btn-primary px-6 py-3 rounded-lg font-medium flex items-center shadow-lg transition-all" do %>
      <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      New Collection
    <% end %>
  </div>

  <% if @collections.any? %>
    <!-- Collections Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @collections.each do |collection| %>
        <div class="card-premium group flex flex-col h-full relative overflow-hidden">
          <div class="absolute top-0 right-0 p-8 opacity-5 group-hover:opacity-10 transition-opacity">
            <svg class="h-32 w-32 text-brand-navy" fill="currentColor" viewBox="0 0 24 24">
              <path d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z"></path>
            </svg>
          </div>

          <div class="p-6 flex-1 relative z-10">
            <div class="flex justify-between items-start mb-4">
              <div class="p-3 rounded-xl bg-indigo-50 text-indigo-600 group-hover:bg-brand-navy group-hover:text-brand-lime transition-all duration-300 shadow-sm">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <div class="flex gap-2">
                <%= link_to edit_collection_path(collection), class: "p-2 text-gray-400 hover:text-brand-navy transition-colors rounded-lg hover:bg-gray-100" do %>
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                <% end %>
                <%= button_to collection_path(collection), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "p-2 text-gray-400 hover:text-red-600 transition-colors rounded-lg hover:bg-red-50" do %>
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                <% end %>
              </div>
            </div>

            <%= link_to collection_path(collection), class: "block group-hover:translate-x-1 transition-transform duration-300" do %>
              <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-brand-navy transition-colors"><%= collection.name %></h3>
              <p class="text-sm text-gray-500 line-clamp-2 mb-6"><%= collection.description.presence || "No description provided." %></p>
            <% end %>

            <div class="grid grid-cols-2 gap-4">
              <div class="bg-gray-50 rounded-lg p-3">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Channels</p>
                <p class="text-lg font-bold text-gray-900"><%= collection.total_channels %></p>
              </div>
              <div class="bg-gray-50 rounded-lg p-3">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Avg Engagement</p>
                <p class="text-lg font-bold text-brand-navy"><%= collection.average_engagement %>%</p>
              </div>
            </div>
          </div>

          <div class="px-6 py-4 bg-gray-50/50 border-t border-gray-100 mt-auto flex justify-between items-center">
            <span class="text-xs text-gray-500 font-medium">Updated <%= time_ago_in_words(collection.updated_at) %> ago</span>
            <%= link_to collection_path(collection), class: "text-sm font-bold text-brand-navy hover:text-brand-lime transition-colors flex items-center" do %>
              View Collection
              <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-20 bg-white rounded-2xl border-2 border-dashed border-gray-200">
      <div class="mx-auto h-24 w-24 text-gray-300 mb-6">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
      </div>
      <h3 class="mt-2 text-xl font-bold text-gray-900">No collections yet</h3>
      <p class="mt-2 text-gray-500 max-w-sm mx-auto">Create your first collection to start organizing channels for your ad campaigns.</p>
      <div class="mt-8">
        <%= link_to new_collection_path, class: "btn-primary px-6 py-3 rounded-lg font-medium inline-flex items-center shadow-lg" do %>
          <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Create Collection
        <% end %>
      </div>
    </div>
  <% end %>
</div>
