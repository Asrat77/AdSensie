<div class="min-h-[60vh] flex items-center justify-center relative">
  <!-- Background Elements -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full max-w-4xl max-h-4xl pointer-events-none">
    <div class="absolute top-0 right-0 w-96 h-96 bg-brand-lime opacity-10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-brand-navy opacity-10 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
  </div>

  <div class="w-full max-w-md relative z-10">
    <div class="glass-panel rounded-2xl p-8 shadow-2xl">
      <div class="text-center mb-8">
        <div class="mx-auto w-16 h-16 bg-brand-lime/20 rounded-full flex items-center justify-center mb-4">
          <span class="text-3xl">ðŸ“¢</span>
        </div>
        <h2 class="text-3xl font-bold text-gray-900 tracking-tight">Add Channel</h2>
        <p class="mt-2 text-gray-600">Enter a Telegram username to track analytics</p>
      </div>

      <%= form_with url: channels_path, local: true, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :username, "Telegram Username", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-400 text-lg">@</span>
            </div>
            <%= f.text_field :username, placeholder: "channel_username", class: "block w-full pl-8 pr-3 py-3 border-gray-200 rounded-lg focus:ring-brand-lime focus:border-brand-lime shadow-sm", required: true, autofocus: true %>
          </div>
          <p class="mt-2 text-xs text-gray-500">Example: @adsensie or https://t.me/adsensie</p>
        </div>

        <div class="flex gap-3">
          <%= link_to "Cancel", channels_path, class: "flex-1 text-center py-3 px-4 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors" %>
          <%= f.submit "Add Channel", class: "flex-1 py-3 px-4 border border-transparent rounded-lg shadow-lg text-sm font-bold text-white bg-brand-navy hover:bg-brand-navy-light focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-navy transition-all transform hover:scale-[1.02]" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
