<div class="space-y-8 animate-fade-in">
  <!-- Channel Header -->
  <div class="relative overflow-hidden rounded-2xl bg-brand-navy shadow-xl">
    <div class="absolute top-0 right-0 -mt-20 -mr-20 h-96 w-96 rounded-full bg-brand-lime opacity-10 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 -mb-20 -ml-20 h-64 w-64 rounded-full bg-accent-purple opacity-20 blur-3xl"></div>
    
    <div class="relative z-10 px-8 py-10">
      <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-6">
        <div class="flex items-center gap-6">
          <div class="h-24 w-24 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center text-4xl shadow-inner border border-white/20">
            <%= @channel.title.first.upcase %>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-white tracking-tight"><%= @channel.title %></h1>
            <div class="flex items-center gap-4 mt-2">
              <a href="https://t.me/<%= @channel.username %>" target="_blank" class="text-brand-lime hover:text-white transition-colors flex items-center gap-1 font-medium">
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-1.07 3.97-2.9 5.33z"/>
                </svg>
                @<%= @channel.username %>
              </a>
              <% if @channel.growth_trend == "trending" %>
                <span class="px-2.5 py-0.5 rounded-full text-xs font-bold bg-brand-lime text-brand-navy animate-pulse-slow">
                  ðŸ”¥ Trending
                </span>
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="flex gap-3">
          <%= link_to "Back to Channels", channels_path, class: "px-4 py-2 rounded-lg text-sm font-medium text-white bg-white/10 hover:bg-white/20 transition-all backdrop-blur-sm" %>
          
          <%= form_with url: add_to_collection_channel_path(@channel), method: :post, class: "flex gap-2" do |f| %>
            <%= f.collection_select :collection_id, @collections, :id, :name, { prompt: "Select Collection" }, { class: "rounded-lg border-none text-sm focus:ring-brand-lime focus:border-brand-lime bg-white/90" } %>
            <button type="submit" class="px-4 py-2 rounded-lg text-sm font-bold text-brand-navy bg-brand-lime hover:bg-white transition-all shadow-lg hover:shadow-brand-lime/20 flex items-center gap-2">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Add
            </button>
          <% end %>
        </div>
      </div>
      
      <p class="mt-6 text-gray-300 max-w-3xl text-lg leading-relaxed"><%= @channel.description %></p>
    </div>
  </div>

  <!-- Key Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="card-premium p-6">
      <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Subscribers</p>
      <div class="flex items-end justify-between">
        <p class="text-3xl font-bold text-gray-900"><%= number_to_human(@channel.subscriber_count) %></p>
        <div class="flex items-center text-green-600 text-sm font-medium bg-green-50 px-2 py-1 rounded">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12 7h-2V5H8v2H6v2h2v2h2V9h2V7zm-2 10a8 8 0 110-16 8 8 0 010 16z" clip-rule="evenodd"/>
          </svg>
          <%= @channel.growth_rate %>%
        </div>
      </div>
    </div>
    
    <div class="card-premium p-6">
      <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Engagement Rate</p>
      <div class="flex items-end justify-between">
        <p class="text-3xl font-bold text-brand-navy"><%= @channel.avg_engagement_rate %>%</p>
        <span class="text-xs text-gray-400">per post</span>
      </div>
    </div>
    
    <div class="card-premium p-6">
      <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Avg Views</p>
      <div class="flex items-end justify-between">
        <p class="text-3xl font-bold text-gray-900"><%= number_to_human(@channel.avg_views) %></p>
        <span class="text-xs text-gray-400">last 30 days</span>
      </div>
    </div>
    
    <div class="card-premium p-6">
      <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Daily Posts</p>
      <div class="flex items-end justify-between">
        <p class="text-3xl font-bold text-gray-900">~<%= rand(2..8) %></p>
        <span class="text-xs text-gray-400">frequency</span>
      </div>
    </div>
  </div>

  <!-- Content & Analysis -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content Area -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Performance Chart Placeholder -->
      <div class="card-premium p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Growth History</h3>
        <div class="h-64 bg-gray-50 rounded-lg flex items-center justify-center border border-gray-100">
          <p class="text-gray-400 flex items-center gap-2">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
            </svg>
            Chart visualization coming soon
          </p>
        </div>
      </div>
      
      <!-- Recent Posts Placeholder -->
      <div class="card-premium p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Recent Posts Analysis</h3>
        <div class="space-y-4">
          <% 3.times do |i| %>
            <div class="p-4 border border-gray-100 rounded-lg hover:bg-gray-50 transition-colors">
              <div class="flex justify-between items-start mb-2">
                <div class="h-4 w-24 bg-gray-200 rounded animate-pulse"></div>
                <div class="h-4 w-16 bg-gray-200 rounded animate-pulse"></div>
              </div>
              <div class="space-y-2">
                <div class="h-3 w-full bg-gray-100 rounded animate-pulse"></div>
                <div class="h-3 w-3/4 bg-gray-100 rounded animate-pulse"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Sidebar -->
    <div class="space-y-8">
      <!-- Channel Details -->
      <div class="card-premium p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Channel Details</h3>
        <dl class="space-y-4">
          <div class="flex justify-between py-2 border-b border-gray-100">
            <dt class="text-sm text-gray-500">Category</dt>
            <dd class="text-sm font-medium text-gray-900">Tech & Software</dd>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <dt class="text-sm text-gray-500">Language</dt>
            <dd class="text-sm font-medium text-gray-900">Amharic / English</dd>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <dt class="text-sm text-gray-500">Founded</dt>
            <dd class="text-sm font-medium text-gray-900">2023</dd>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <dt class="text-sm text-gray-500">Verification</dt>
            <dd class="text-sm font-medium text-green-600 flex items-center gap-1">
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Verified
            </dd>
          </div>
        </dl>
      </div>
      
      <!-- Similar Channels -->
      <div class="card-premium p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Similar Channels</h3>
        <div class="space-y-4">
          <% # Placeholder for similar channels logic %>
          <p class="text-sm text-gray-500 italic">Recommendations coming soon based on audience overlap.</p>
        </div>
      </div>
    </div>
  </div>
</div>
