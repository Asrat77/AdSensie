<div class="space-y-8 animate-fade-in">
  <!-- Header -->
  <div class="relative overflow-hidden rounded-2xl bg-brand-navy p-8 text-white shadow-xl">
    <div class="absolute top-0 right-0 -mt-10 -mr-10 h-64 w-64 rounded-full bg-brand-lime opacity-20 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 -mb-10 -ml-10 h-64 w-64 rounded-full bg-accent-purple opacity-20 blur-3xl"></div>
    
    <div class="relative z-10">
      <h1 class="text-4xl font-bold tracking-tight text-white mb-2">Dashboard</h1>
      <p class="text-brand-lime/90 text-lg max-w-2xl">Overview of Ethiopian tech channels for ad placement. Track performance and discover new opportunities.</p>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="card-premium p-6 relative overflow-hidden group">
      <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
        <svg class="h-24 w-24 text-brand-navy" fill="currentColor" viewBox="0 0 24 24">
          <path d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
        </svg>
      </div>
      <div class="flex items-center mb-4">
        <div class="p-3 rounded-lg bg-indigo-50 text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-colors duration-300">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
          </svg>
        </div>
        <h3 class="ml-3 text-sm font-medium text-gray-500 uppercase tracking-wider">Total Channels</h3>
      </div>
      <div class="flex items-baseline">
        <p class="text-3xl font-bold text-gray-900"><%= @total_channels %></p>
        <span class="ml-2 text-sm font-medium text-green-600 bg-green-100 px-2 py-0.5 rounded-full">Active</span>
      </div>
    </div>

    <div class="card-premium p-6 relative overflow-hidden group">
      <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
        <svg class="h-24 w-24 text-green-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
      </div>
      <div class="flex items-center mb-4">
        <div class="p-3 rounded-lg bg-green-50 text-green-600 group-hover:bg-green-600 group-hover:text-white transition-colors duration-300">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
        <h3 class="ml-3 text-sm font-medium text-gray-500 uppercase tracking-wider">Avg Engagement</h3>
      </div>
      <div class="flex items-baseline">
        <p class="text-3xl font-bold text-gray-900"><%= @avg_engagement %>%</p>
        <span class="ml-2 text-sm font-medium text-gray-500">per post</span>
      </div>
    </div>

    <div class="card-premium p-6 relative overflow-hidden group">
      <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
        <svg class="h-24 w-24 text-purple-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <div class="flex items-center mb-4">
        <div class="p-3 rounded-lg bg-purple-50 text-purple-600 group-hover:bg-purple-600 group-hover:text-white transition-colors duration-300">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="ml-3 text-sm font-medium text-gray-500 uppercase tracking-wider">My Collections</h3>
      </div>
      <div class="flex items-baseline">
        <p class="text-3xl font-bold text-gray-900"><%= current_user.collections.count %></p>
        <span class="ml-2 text-sm font-medium text-indigo-600 hover:text-indigo-800 cursor-pointer">
          <%= link_to "View All", collections_path %>
        </span>
      </div>
    </div>
  </div>

  <!-- Two Column Layout -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Trending Channels -->
    <div class="card-premium">
      <div class="px-6 py-5 border-b border-gray-100 flex justify-between items-center bg-gray-50/50 rounded-t-xl">
        <div>
          <h2 class="text-lg font-bold text-gray-900 flex items-center">
            <span class="mr-2">üî•</span> Trending Channels
          </h2>
          <p class="text-xs text-gray-500 mt-1">Fastest growing in the last 30 days</p>
        </div>
        <%= link_to channels_path(growth_filter: "trending"), class: "text-xs font-medium text-brand-navy hover:text-brand-lime transition-colors" do %>
          View All &rarr;
        <% end %>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <% @trending_channels.each do |channel| %>
            <div class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-50 transition-colors border border-transparent hover:border-gray-100">
              <div class="flex-1 min-w-0">
                <%= link_to channel_path(channel), class: "text-sm font-bold text-gray-900 hover:text-brand-navy truncate block" do %>
                  <%= channel.title %>
                <% end %>
                <p class="text-xs text-gray-500 truncate"><%= channel.username %></p>
              </div>
              <div class="text-right ml-4">
                <div class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                  <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12 7h-2V5H8v2H6v2h2v2h2V9h2V7zm-2 10a8 8 0 110-16 8 8 0 010 16z" clip-rule="evenodd"/>
                  </svg>
                  <%= channel.growth_rate %>%
                </div>
                <p class="text-xs text-gray-400 mt-1"><%= number_to_human(channel.subscriber_count) %> subs</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- High Engagement Channels -->
    <div class="card-premium">
      <div class="px-6 py-5 border-b border-gray-100 flex justify-between items-center bg-gray-50/50 rounded-t-xl">
        <div>
          <h2 class="text-lg font-bold text-gray-900 flex items-center">
            <span class="mr-2">‚ö°</span> High Engagement
          </h2>
          <p class="text-xs text-gray-500 mt-1">Top performing channels by engagement</p>
        </div>
        <%= link_to channels_path(sort: "engagement"), class: "text-xs font-medium text-brand-navy hover:text-brand-lime transition-colors" do %>
          View All &rarr;
        <% end %>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <% @high_engagement_channels.each do |channel| %>
            <div class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-50 transition-colors border border-transparent hover:border-gray-100">
              <div class="flex-1 min-w-0">
                <%= link_to channel_path(channel), class: "text-sm font-bold text-gray-900 hover:text-brand-navy truncate block" do %>
                  <%= channel.title %>
                <% end %>
                <p class="text-xs text-gray-500 truncate"><%= channel.username %></p>
              </div>
              <div class="text-right ml-4">
                <p class="text-sm font-bold text-brand-navy"><%= channel.avg_engagement_rate %>%</p>
                <p class="text-xs text-gray-400 mt-1"><%= number_to_human(channel.avg_views) %> avg views</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Collections -->
  <% if @recent_collections.any? %>
    <div class="card-premium">
      <div class="px-6 py-5 border-b border-gray-100 flex justify-between items-center bg-gray-50/50 rounded-t-xl">
        <h2 class="text-lg font-bold text-gray-900 flex items-center">
          <span class="mr-2">üìÅ</span> Recent Collections
        </h2>
        <%= link_to collections_path, class: "text-xs font-medium text-brand-navy hover:text-brand-lime transition-colors" do %>
          View All &rarr;
        <% end %>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <% @recent_collections.each do |collection| %>
            <div class="group relative bg-white border border-gray-200 rounded-xl p-5 hover:border-brand-lime hover:shadow-lg transition-all duration-300">
              <div class="flex justify-between items-start mb-4">
                <div class="p-2 bg-indigo-50 rounded-lg text-indigo-600 group-hover:bg-brand-lime group-hover:text-brand-navy transition-colors">
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <span class="text-xs font-medium text-gray-400"><%= time_ago_in_words(collection.updated_at) %> ago</span>
              </div>
              
              <%= link_to collection_path(collection) do %>
                <h3 class="font-bold text-gray-900 mb-1 group-hover:text-brand-navy transition-colors"><%= collection.name %></h3>
                <p class="text-sm text-gray-500 mb-3"><%= collection.total_channels %> channels</p>
                
                <div class="flex items-center text-xs text-gray-500 bg-gray-50 rounded-md p-2">
                  <span class="font-medium text-gray-700 mr-1">Avg Engagement:</span>
                  <%= collection.average_engagement %>%
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Quick Actions -->
  <div class="relative overflow-hidden rounded-2xl bg-gradient-to-r from-brand-navy to-indigo-900 shadow-2xl p-8 text-white">
    <div class="absolute top-0 right-0 -mt-20 -mr-20 h-80 w-80 rounded-full bg-brand-lime opacity-10 blur-3xl animate-pulse-slow"></div>
    
    <div class="relative z-10 flex flex-col md:flex-row items-center justify-between gap-6">
      <div>
        <h2 class="text-2xl font-bold mb-2">Ready to optimize your ad placement?</h2>
        <p class="text-indigo-200 max-w-xl">Browse our curated list of channels, compare performance metrics, and create collections for your next campaign.</p>
      </div>
      <div class="flex flex-wrap gap-4">
        <%= link_to channels_path, class: "btn-accent px-6 py-3 rounded-lg font-bold flex items-center" do %>
          Browse Channels
          <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        <% end %>
        
        <div class="flex gap-3">
          <%= turbo_stream_from "dashboard_sync" %>
          <%= render "dashboard/sync_button" %>
          <%= link_to new_collection_path, class: "px-6 py-3 rounded-lg font-bold border border-white/30 hover:bg-white/10 transition-colors flex items-center" do %>
            <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Collection
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Toast Container -->
<div id="toast_container"></div>
